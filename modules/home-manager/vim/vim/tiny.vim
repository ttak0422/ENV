" https://github.com/AlexPl292/IdeaVim-EasyMotion/issues/36
let mapleader=" "

nnoremap <Leader>, :bprev<CR>
nnoremap <Leader>. :bnext<CR>
nnoremap <Leader>q :bd<CR>
nnoremap <silent> <ESC><ESC> :nohl<CR>
inoremap jk  <Esc>

set cursorline
set number
set signcolumn=yes
set virtualedit=block
set ignorecase
set smartcase
set incsearch
set hlsearch
set nobackup
set nowritebackup
set hidden
set showmatch
